CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
# the Makefile should work even if there is a file in the folder that has 
# the same name as one of your rule
.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *.swp *~ $(NAME)

oclean: 
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
